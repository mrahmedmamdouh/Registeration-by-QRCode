<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showList"
        android:layout_width="396dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="79dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="@string/history"
        android:textSize="17sp"
        app:backgroundTint="#848285"
        app:cornerRadius="80dp"
        app:icon="@drawable/icon_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="245dp"
        android:text="@string/validate_ticket_invitation"
        android:textSize="17sp"
        app:backgroundTint="#603c8e"
        app:cornerRadius="80dp"
        app:icon="@drawable/icon_scan"
        app:layout_constraintBottom_toTopOf="@+id/showList"
        app:layout_constraintEnd_toEndOf="@+id/showList"
        app:layout_constraintStart_toStartOf="@+id/showList"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>